{
    "compilerOptions": {
        "module": "ESNext",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "types": ["vuetify", "jest"],
        "esModuleInterop": true,
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": ["src"]
}
